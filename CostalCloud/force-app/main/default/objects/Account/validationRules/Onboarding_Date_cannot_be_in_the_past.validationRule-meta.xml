<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Onboarding_Date_cannot_be_in_the_past</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISNEW() ,
Onboarding_Date__c   &lt;  TODAY())</errorConditionFormula>
    <errorDisplayField>Onboarding_Date__c</errorDisplayField>
    <errorMessage>The Onboarding Date cannot be older than today.</errorMessage>
</ValidationRule>
